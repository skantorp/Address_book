@using Address_Book.ViewModels
@model List<UserViewModel>
@{
    ViewData["Title"] = "AllUsers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (Model.Count>0)
{
    <table>
        @for (int i = 0; i < Model.Count; i++)
        {
            var user = Model[i];
            <tr>
                <td>
                    <b>@(string.Format("User{0}: {1}", i + 1, user.Name))</b>
                </td>
            </tr>
            @for (int j = 0; j < user.Phones.Count; j++)
            {
                var phone = user.Phones[j];
                <tr>
                    <td>
                        @(string.Format("Phone{0}: {1} ", j + 1, phone.Number))
                    </td>

                    <td>
                        @(string.Format("IsActive: {0}", phone.IsActive ? "Active" : "Inactive"))
                    </td>
                </tr>

            }
            <br />

        }
    </table>

}
else
{
    <h2>There is no data with such requirements</h2>
}

